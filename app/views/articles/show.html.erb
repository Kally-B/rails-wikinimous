<%= render "navbar", article: @article %>

<div class="container">
  <div class="d-flex align-items-center">
    <h1><%= @article.title %></h1>
    <%= link_to "✏️", edit_article_path(@article), class: "p-2" %>
    <%= link_to "🗑", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "p-2" %>
  </div>
  <div class="border border-dark card-body"><%= @article.content %></div>

  <p class="mt-2"><%= link_to "Back", articles_path %></p>
</div>
